  body
    #fh5co-container
      #fh5co-home.js-fullheight data-section="home"
        .flexslider
          .fh5co-overlay
          .fh5co-text
            .container
              .row
                h1.to-animate
          ul.slides
            li data-stellar-background-ratio="0.5" style=("background-image: url(images/slide_1.jpg);")
            li data-stellar-background-ratio="0.5" style=("background-image: url(images/slide_2.jpg);")
            li data-stellar-background-ratio="0.5" style=("background-image: url(images/slide_3.jpg);")
      .js-sticky
        .fh5co-main-nav
          .container-fluid
            .fh5co-menu-1
              a data-nav-section="home" href="#"  Home
              a data-nav-section="about" href="#"  About
              a data-nav-section="features" href="#"  Features
            .fh5co-logo = image_tag("images.png", :alt => "Paradise Biryani Pointe")
              a href="index.html"  Paradise
            .fh5co-menu-2
